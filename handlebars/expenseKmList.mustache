            <th>Indemnités</th>
            {{#edit}}
            <th class="hidden-print">Actions</th>
            {{/edit}}
        </thead>
        <tbody class='activity'>
        </tbody>
        <tfoot>
            <tr>
                <td colspan='6'>Total</td>
                <td id='km_activity_total'></td>
                {{#edit}}
                <td class="hidden-print"></td>
                {{/edit}}
            </tr>
        </tfoot>
    </table>
</div>
