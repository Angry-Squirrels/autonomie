<div>

    <table class="table table-striped table-bordered table-condensed">
        <caption>
        Frais kilométriques liés au fonctionnement de l'entreprise
            {{#edit}}
<a href="#kmlines/add" class='btn' title="Ajouter une ligne"><i class='icon icon-plus-sign'></i>&nbsp;Ajouter</a>
            {{/edit}}
        </caption>
        <thead>
            <th>Date</th>
            <th>Type</th>
            <th class='span3'>Prestation</th>
            <th>Point de départ</th>
            <th>Point d'arrivée</th>
            <th>Kms</th>
            <th>Indemnités</th>
            {{#edit}}
            <th>Actions</th>
            {{/edit}}
        </thead>
        <tbody class='internal'>
        </tbody>
        <tfoot>
            <tr>
                <td colspan='6'>Total</td>
                <td id='km_internal_total'></td>
                {{#edit}}
                <td></td>
                {{/edit}}
            </tr>
        </tfoot>
    </table>
    <br/>
    <table class="table table-striped table-bordered table-condensed">
        <caption>
            Frais kilométriques liés à l'activité
            {{#edit}}
<a href="#kmlines/add" class='btn' title="Ajouter une ligne"><i class='icon icon-plus-sign'></i>&nbsp;Ajouter</a>
            {{/edit}}
        </caption>
        <thead>
            <th>Date</th>
            <th>Type</th>
            <th class='span3'>Prestation</th>
            <th>Point de départ</th>
            <th>Point d'arrivée</th>
            <th>Kms</th>
            <th>Indemnités</th>
            {{#edit}}
            <th>Actions</th>
            {{/edit}}
        </thead>
        <tbody class='activity'>
        </tbody>
        <tfoot>
            <tr>
                <td colspan='6'>Total</td>
                <td id='km_activity_total'></td>
                {{#edit}}
                <td></td>
                {{/edit}}
            </tr>
        </tfoot>
    </table>
</div>
